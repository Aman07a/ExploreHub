<div class="header">
  <div class="container">
    <img src="https://content.codecademy.com/courses/learn-rails/img/logo-1tm.svg" width="80">
    <h1>BokenjiKan</h1>
  </div>
</div>

<div class="destination">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">

        <h2 class="destination-title"><%= @destination.name %> - <%= @destination.tag.title %></h2>

        <div class="cards row">
          <div class="card col-xs-4">
            <p><%= image_tag @destination.image %></p>
            <p><%= @destination.description %></p>
          </div>
        </div>
      
      </div>
    </div>
  </div>
</div> 

